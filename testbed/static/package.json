{
	"name": "@rakkasjs/testbed-static",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "rakkas build",
		"start": "sirv dist/client --port 3000",
		"ci": "vitest run --reporter=verbose",
		"ci:local": "TEST_HOST=http://localhost:3000 pnpm run ci",
		"test": "pnpm test:typecheck && pnpm test:lint",
		"test:typecheck": "tsc -p tsconfig.json --noEmit",
		"test:lint": "eslint . --max-warnings 0 --ignore-pattern dist"
	},
	"devDependencies": {
		"@cyco130/eslint-config": "^2.0.0",
		"@types/ps-tree": "^1.1.2",
		"eslint": "^8.18.0",
		"node-fetch": "^3.2.6",
		"ps-tree": "^1.2.0",
		"puppeteer": "^15.1.1",
		"rakkasjs": "workspace:*",
		"typescript": "^4.7.4",
		"vite": "^3.0.0-beta.5"
	},
	"dependencies": {
		"@types/react": "^18.0.14",
		"@types/react-dom": "^18.0.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sirv-cli": "^2.0.2"
	}
}
