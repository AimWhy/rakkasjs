{
	"private": true,
	"name": "rakkas-apollo-testbed",
	"version": "0.5.0-canary.6",
	"description": "Rakkas.js TypeScript demo project",
	"scripts": {
		"dev": "rakkas dev",
		"build": "rakkas build",
		"start": "node dist/server",
		"check": "run-p typecheck 'test:*'",
		"test": "run-p 'test:*'",
		"test:e2e": "rakkas with-port \"start-server-and-test 'pnpm start' http-get://\\$HOST:\\$PORT 'run-s 'test:e2e:*''\"",
		"test:e2e:api": "jest --config jest-api-test.config.json --maxWorkers=1 api-test",
		"test:e2e:browser": "cypress run",
		"typecheck": "tsc -p tsconfig.json --noEmit"
	},
	"dependencies": {
		"@apollo/client": "^3.4.16",
		"@graphql-tools/schema": "^8.2.0",
		"@rakkasjs/apollo-server": "workspace:*",
		"devalue": "^2.0.1",
		"graphql": "^15.6.1",
		"rakkasjs": "workspace:*",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-helmet-async": "^1.1.2"
	},
	"devDependencies": {
		"@rakkasjs/cli": "workspace:*",
		"@testing-library/react": "^12.1.2",
		"@types/jest": "^27.0.2",
		"@types/node-fetch": "2.5.12",
		"@types/react": "^17.0.27",
		"@types/react-dom": "^17.0.9",
		"cypress": "^8.6.0",
		"esbuild": "^0.13.4",
		"esbuild-jest": "^0.5.0",
		"jest": "^27.2.5",
		"node-fetch": "^2.6.5",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"start-server-and-test": "^1.14.0",
		"typescript": "^4.4.3"
	}
}
