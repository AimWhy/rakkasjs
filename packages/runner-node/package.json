{
	"name": "@rakkasjs/runner-node",
	"version": "0.4.0-canary.4",
	"description": "Rakkas.js Node runner",
	"scripts": {
		"prepublishOnly": "pnpm build",
		"dev": "esbuild src/index.ts src/parse-body.ts --bundle --platform=node --outdir=dist --watch",
		"build": "esbuild src/index.ts src/parse-body.ts --bundle --platform=node --outdir=dist"
	},
	"author": "Fatih Ayg√ºn <cyco130@gmail.com>",
	"license": "MIT",
	"repository": "https://github.com/rakkasjs/rakkasjs",
	"homepage": "https://rakkasjs.org",
	"keywords": [
		"react",
		"vite",
		"nextjs",
		"ssr"
	],
	"types": "index.d.ts",
	"bin": {
		"rakkas-node": "rakkas-node.js"
	},
	"exports": {
		".": "./dist/index.js",
		"./parse-body": "./dist/parse-body.js"
	},
	"files": [
		"rakkas-node.js",
		"dist/**/*",
		"*.js",
		"*.d.ts"
	],
	"peerDependencies": {
		"rakkasjs": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^16.10.3",
		"@types/node-fetch": "2.5.12",
		"esbuild": "^0.13.4",
		"prettier": "^2.4.1",
		"rakkasjs": "workspace:*",
		"rimraf": "^3.0.2",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"node-fetch": "^2.6.5",
		"sirv": "^1.0.17"
	}
}
