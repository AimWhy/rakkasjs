{
	"name": "@rakkasjs/cli",
	"version": "0.3.0",
	"description": "Development tools for Rakkas.js",
	"scripts": {
		"prepublishOnly": "pnpm build",
		"dev": "node build.mjs --watch",
		"build": "rimraf dist && node build.mjs",
		"precommit": "lint-staged --no-stash",
		"check": "run-p typecheck lint:ts test",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint:ts": "eslint --max-warnings=0 src",
		"test": "jest"
	},
	"author": "Fatih Ayg√ºn <cyco130@gmail.com>",
	"license": "MIT",
	"repository": "https://github.com/rakkasjs/rakkasjs",
	"homepage": "https://rakkasjs.org",
	"keywords": [
		"react",
		"vite",
		"nextjs",
		"ssr"
	],
	"bin": {
		"rakkas": "rakkas.js"
	},
	"module": "dist/index.js",
	"files": [
		"rakkas.js",
		"dist/**/*",
		"server-entry.js",
		"*.d.ts"
	],
	"peerDependencies": {
		"@rakkasjs/runner-node": "workspace:*",
		"rakkasjs": "workspace:*",
		"react": "^17",
		"react-dom": "^17"
	},
	"devDependencies": {
		"@rakkasjs/runner-node": "workspace:*",
		"@types/jest": "^27.0.1",
		"@types/jsdom": "^16.2.13",
		"@types/micromatch": "^4.0.2",
		"@types/mkdirp": "^1.0.2",
		"@types/node": "^16.7.1",
		"@types/rimraf": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^4.29.2",
		"@typescript-eslint/parser": "^4.29.2",
		"esbuild-jest": "^0.5.0",
		"esbuild-node-externals": "^1.3.0",
		"eslint": "^7.32.0",
		"eslint-plugin-import": "^2.24.1",
		"eslint-plugin-only-warn": "^1.0.3",
		"jest": "^27.0.6",
		"lint-staged": "^11.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"rakkasjs": "workspace:*",
		"rimraf": "^3.0.2",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"@babel/core": "^7.15.0",
		"@vitejs/plugin-react": "^1.0.0-beta.0",
		"chalk": "^4.1.2",
		"cheerio": "^1.0.0-rc.10",
		"commander": "^8.1.0",
		"esbuild": "^0.12.22",
		"fast-glob": "^3.2.7",
		"get-port": "^5.1.1",
		"html-entities": "^2.3.2",
		"micromatch": "^4.0.4",
		"mkdirp": "^1.0.4",
		"node-fetch": "^2.6.1",
		"open": "^8.2.1",
		"vite": "^2.5.0",
		"vite-plugin-virtual": "^0.1.1"
	}
}
