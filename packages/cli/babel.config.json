{
	"env": {
		"production": {
			"presets": [
				"@babel/preset-typescript",
				[
					"@babel/preset-env",
					{
						"targets": "maintained node versions",
						"modules": false
					}
				]
			],
			"plugins": [["babel-plugin-add-import-extension", { "replace": true }]]
		},
		"test": {
			"presets": [
				"@babel/preset-typescript",
				[
					"@babel/preset-env",
					{
						"targets": "current node",
						"modules": "commonjs"
					}
				]
			]
		}
	}
}
