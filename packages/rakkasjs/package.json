{
	"name": "rakkasjs",
	"version": "0.3.0",
	"description": "Lightning fast Next.js alternative powered by Vite",
	"scripts": {
		"prepublishOnly": "pnpm build",
		"build": "rimraf dist && cross-env NODE_ENV=production rollup --config rollup.config.js",
		"dev": "rollup --watch --config rollup.config.js",
		"precommit": "lint-staged --no-stash",
		"check": "run-p typecheck lint:ts test",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint:ts": "eslint --max-warnings=0 src",
		"test": "jest"
	},
	"author": "Fatih Ayg√ºn <cyco130@gmail.com>",
	"license": "MIT",
	"repository": "https://github.com/rakkasjs/rakkasjs",
	"homepage": "https://rakkasjs.org",
	"keywords": [
		"react",
		"vite",
		"nextjs",
		"ssr"
	],
	"files": [
		"dist/**/*",
		"*.d.ts"
	],
	"exports": {
		".": "./dist/index.js",
		"./server": "./dist/server.js",
		"./client": "./dist/client.js"
	},
	"dependencies": {
		"@types/react": "^17.0.24",
		"mkdirp": "^1.0.4",
		"vite": "^2.6.0-beta.3"
	},
	"peerDependencies": {
		"react": "^17",
		"react-dom": "^17",
		"react-helmet-async": "^1"
	},
	"devDependencies": {
		"@babel/core": "^7.15.5",
		"@babel/preset-env": "^7.15.6",
		"@babel/preset-react": "^7.14.5",
		"@babel/preset-typescript": "^7.15.0",
		"@rollup/plugin-commonjs": "^20.0.0",
		"@rollup/plugin-node-resolve": "^13.0.5",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/react": "^12.1.1",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.0.2",
		"@types/md5": "^2.3.1",
		"@types/mkdirp": "^1.0.2",
		"@types/react-dom": "^17.0.9",
		"@types/testing-library__jest-dom": "^5.14.1",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"babel-plugin-transform-vite-meta-env": "^1.0.3",
		"core-js": "^3.18.1",
		"cross-env": "^7.0.3",
		"devalue": "^2.0.1",
		"eslint": "^7.32.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-only-warn": "^1.0.3",
		"eslint-plugin-react": "^7.26.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"jest": "^27.2.3",
		"lint-staged": "^11.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-helmet-async": "^1.1.2",
		"react-refresh": "^0.10.0",
		"rimraf": "^3.0.2",
		"rollup": "^2.57.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-ts": "^1.4.7",
		"typescript": "^4.4.3"
	}
}
