{
	"name": "rakkasjs",
	"version": "0.6.0-next.0",
	"bin": {
		"rakkas": "./cli.js",
		"rakkasjs": "./cli.js"
	},
	"files": [
		"dist",
		"cli.js",
		"*.d.ts"
	],
	"exports": {
		".": "./dist/index.mjs",
		"./vite-plugin": "./dist/vite-plugin.js",
		"./runtime/vavite-handler": "./dist/runtime/vavite-handler.mjs",
		"./runtime/client-entry": "./dist/runtime/client-entry.mjs"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"prepack": "rm -rf dist && pnpm build",
		"test": "pnpm test:typecheck && pnpm test:lint && pnpm test:unit",
		"test:unit": "vitest",
		"test:typecheck": "tsc -p tsconfig.json --noEmit",
		"test:lint": "eslint . --max-warnings 0 --ignore-pattern dist"
	},
	"description": "Lightning fast Next.js alternative powered by Vite",
	"license": "MIT",
	"repository": "https://github.com/rakkasjs/rakkasjs",
	"homepage": "https://rakkasjs.org",
	"keywords": [
		"react",
		"vite",
		"nextjs",
		"ssr"
	],
	"peerDependencies": {
		"vite": "2.8.6",
		"react-helmet-async": "^1.2.3",
		"react": "^18.0.0-rc.2",
		"react-dom": "^18.0.0-rc.2"
	},
	"devDependencies": {
		"@cyco130/eslint-config": "^1.0.0",
		"@hattip/adapter-node": "0.0.1",
		"@hattip/core": "0.0.1",
		"@types/micromatch": "^4.0.2",
		"eslint": "^8.10.0",
		"react": "^18.0.0-rc.2",
		"react-dom": "^18.0.0-rc.2",
		"react-helmet-async": "^1.2.3",
		"tsup": "^5.11.13",
		"typescript": "^4.6.2",
		"vite": "^2.8.6"
	},
	"dependencies": {
		"@types/node": "^17.0.21",
		"@types/react": "^17.0.40",
		"@types/react-dom": "^17.0.13",
		"@vavite/connect": "^1.1.5",
		"@vavite/expose-vite-dev-server": "1.1.5",
		"@vavite/multibuild": "^1.1.5",
		"@vitejs/plugin-react": "^1.2.0",
		"cac": "^6.7.12",
		"fast-glob": "^3.2.11",
		"micromatch": "^4.0.4",
		"picocolors": "^1.0.0"
	}
}
