{
	"name": "rakkasjs",
	"version": "0.6.0-next.5",
	"type": "module",
	"bin": {
		"rakkas": "./cli.js",
		"rakkasjs": "./cli.js"
	},
	"files": [
		"dist",
		"cli.js",
		"*.d.ts"
	],
	"exports": {
		".": {
			"browser": "./dist/client.js",
			"default": "./dist/server.js"
		},
		"./node-adapter": "./dist/node-adapter.js",
		"./vite-plugin": "./dist/vite-plugin.js"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"prepack": "rm -rf dist && pnpm build",
		"test": "pnpm test:typecheck && pnpm test:lint && pnpm test:unit && pnpm test:package",
		"test:unit": "vitest run",
		"test:typecheck": "tsc -p tsconfig.json --noEmit",
		"test:lint": "eslint . --max-warnings 0 --ignore-pattern dist",
		"test:package": "publint"
	},
	"description": "Lightning fast Next.js alternative powered by Vite",
	"license": "MIT",
	"repository": "https://github.com/rakkasjs/rakkasjs",
	"homepage": "https://rakkasjs.org",
	"keywords": [
		"react",
		"vite",
		"nextjs",
		"ssr"
	],
	"peerDependencies": {
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"vite": "2.8.6"
	},
	"devDependencies": {
		"@brillout/json-s": "^0.4.5",
		"@cyco130/eslint-config": "^2.0.0",
		"@types/babel__core": "^7.1.18",
		"@types/micromatch": "^4.0.2",
		"@types/prettier": "^2.6.3",
		"devalue": "^2.0.1",
		"eslint": "^8.17.0",
		"isbot-fast": "^1.2.0",
		"prettier": "^2.5.1",
		"publint": "^0.0.1",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"react-error-boundary": "^3.1.4",
		"react-helmet-async": "^1.2.3",
		"tsup": "^6.1.2",
		"typescript": "^4.7.3",
		"vite": "3.0.0-alpha.10"
	},
	"dependencies": {
		"@babel/core": "^7.18.2",
		"@babel/types": "^7.18.4",
		"@hattip/adapter-node": "0.0.3",
		"@hattip/core": "0.0.3",
		"@types/node": "^17.0.41",
		"@types/react": "^18.0.12",
		"@types/react-dom": "^18.0.5",
		"@vavite/connect": "^1.3.2",
		"@vavite/expose-vite-dev-server": "1.3.2",
		"@vavite/multibuild": "^1.3.2",
		"@vitejs/plugin-react": "2.0.0-alpha.2",
		"cac": "^6.7.12",
		"fast-glob": "^3.2.11",
		"micromatch": "^4.0.4",
		"picocolors": "^1.0.0"
	}
}
