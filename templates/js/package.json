{
	"private": true,
	"name": "rakkas-demo-js",
	"version": "0.3.0",
	"description": "Rakkas.js vanilla JS demo project",
	"scripts": {
		"dev": "rakkas dev --open",
		"build": "rakkas build",
		"start": "rakkas-node",
		"check": "run-p 'lint:*' 'test:*'",
		"test": "run-p 'test:*'",
		"test:unit": "jest",
		"test:e2e": "start-server-and-test 'npm start' http-get://localhost:3000 'run-s 'test:e2e:*''",
		"test:e2e:api": "jest --config jest-api-test.config.json --maxWorkers=1 api-test",
		"test:e2e:browser": "cypress run",
		"lint": "run-p 'lint:*'",
		"lint:js": "eslint src",
		"lint:css": "stylelint \"src/**/*.css\"",
		"format": "prettier . --write"
	},
	"dependencies": {
		"@rakkasjs/runner-node": "workspace:*",
		"rakkasjs": "workspace:*",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-helmet-async": "^1.0.9"
	},
	"devDependencies": {
		"@rakkasjs/cli": "workspace:*",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/react": "^12.0.0",
		"cypress": "^8.4.1",
		"esbuild": "^0.12.22",
		"esbuild-jest": "^0.5.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.1",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"jest": "^27.0.6",
		"jest-css-modules-transform": "^4.3.0",
		"node-fetch": "^2.6.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"start-server-and-test": "^1.14.0",
		"stylelint": "^13.13.1",
		"stylelint-config-css-modules": "^2.2.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-standard": "^22.0.0"
	}
}
