{
	"private": true,
	"name": "rakkas-demo-js",
	"version": "0.5.0-canary.8",
	"description": "Rakkas.js vanilla JS demo project",
	"scripts": {
		"dev": "rakkas dev --open",
		"build": "rakkas build",
		"start": "node dist/server",
		"check": "run-p 'lint:*' 'test:*'",
		"test": "run-p 'test:*'",
		"test:unit": "jest",
		"test:e2e": "rakkas with-port \"start-server-and-test 'npm start' http-get://\\$HOST:\\$PORT 'run-s 'test:e2e:*''\"",
		"test:e2e:api": "jest --config jest-api-test.config.json --maxWorkers=1 api-test",
		"test:e2e:browser": "cypress run",
		"lint": "run-p 'lint:*'",
		"lint:js": "eslint src",
		"lint:css": "stylelint \"src/**/*.css\"",
		"format": "prettier . --write"
	},
	"dependencies": {
		"rakkasjs": "workspace:*",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-helmet-async": "^1.1.2"
	},
	"devDependencies": {
		"@rakkasjs/cli": "workspace:*",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/react": "^12.1.2",
		"cypress": "^8.6.0",
		"esbuild": "^0.13.4",
		"esbuild-jest": "^0.5.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-css-modules": "^2.11.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-jest": "^25.0.5",
		"eslint-plugin-no-only-tests": "^2.6.0",
		"eslint-plugin-react": "^7.26.1",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-ssr-friendly": "^1.0.5",
		"jest": "^27.2.5",
		"jest-css-modules-transform": "^4.3.0",
		"node-fetch": "^2.6.5",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"start-server-and-test": "^1.14.0",
		"stylelint": "^13.13.1",
		"stylelint-config-css-modules": "^2.2.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-standard": "^22.0.0"
	}
}
